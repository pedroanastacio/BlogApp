<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h4>{{titulo}}</h4>
                <p>{{descricao}}</p>
                <small>{{categoria.nome}}</small><br>
                <small>{{data}}</small>
            </div>
            <div class="col" style="margin: auto; text-align: center;">
                <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-info">Editar</button></a>
                <form action="/admin/posts/remove" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-2">Remover</button></a>
                </form>
            </div>
        </div>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}

