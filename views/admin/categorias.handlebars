<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h4>{{nome}}</h4>
                <small>{{slug}}</small><br>
                <small>{{date}}</small><br>
            </div>
            <div class="col" style="margin: auto; text-align: center">
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-info">Editar</button></a>
            </div>
        </div>
    </div>
</div>
{{else}}

{{/each}}