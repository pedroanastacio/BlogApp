<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/posts/edit" method="POST">
            <input type="hidden" name="id" value="{{post._id}}" required>
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{post.titulo}}" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{post.slug}}" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{post.descricao}}" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" required>{{post.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}    
            </select>
            
            <button type="submit" class="btn btn-success mt-4">Editar postagem</button>
        </form>
    </div>
</div>